
<div>
    <h1>Products</h1>
    <ul>
        {{#each products.docs}}
        
         <li>
            <p><b>{{this.title}}</b></p>
            <p>Precio: ${{this.price}}</p>
            <p>Stock: {{this.stock}}</p>
            <p>Categor√≠a: {{this.category}}</p>
            <button><a href="/products/{{this._id}}">Add to Cart</a></button>
        </li>
        {{/each}}
    </ul>
    
    <div>
        {{#if products.hasPrevPage}}
            <a href="/?page={{products.prevPage}}">Ant</a>
        {{/if}}
    </div>
    <span>Pagina {{products.page}} de {{products.totalPages}}</span>
    <div>
        {{#if products.hasNextPage}}
            <a href="/?page={{products.nextPage}}">Sig</a>
        {{/if}}
    </div>
</div>